{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}
{% block stylesheets %}
	{{ parent()}}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block body %}
	<main class="main DO-NOT-PRINT">
		<aside class="sidebar">
			<nav class="nav">
				<div class="blue-icon">
					{% include 'icons/blue-logo.svg'%}
				</div>
				<ul>
					{% if app.user %}
						<li>
							<a class="stock" href="/stock">
								{% include 'icons/Stock.svg' %}
								Stock</a>
						</li>

						<li>
							<a class="gestion" href="/gestion">
								{% include 'icons/Scan.svg' %}
								Gestion</a>
						</li>

						<li>
							<a class="logout" href="/logout">
								{% include 'icons/logout.svg' %}</a>
						</li>
					{% endif %}
				</ul>
			</nav>
		</aside>
	</main>
{% endblock %}
