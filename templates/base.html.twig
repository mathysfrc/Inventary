<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/x-icon" href="{{ asset('build/images/yellow.svg') }}"/>
		<link href="impression.scss" rel="stylesheet" type="text/scss" media="print">

		<title>
			{% block title %}
				ImpriNova
			{% endblock %}
		</title>

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>

    		{% block flash %}
			{% for category, messages in app.flashes %}
				{% for message in messages %}
					<div class="flash container justify-content-end text-center w-75 my-2">
						<div class="alert alert-{{ category }}">
							{{ message }}
						</div>
					</div>
				{% endfor %}
			{% endfor %}
		{% endblock %}
		{% block body %}{% endblock %}
        
	</body>
</html>
