{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block stylesheets %}
	{{ parent()}}
	{{ encore_entry_link_tags('login') }}
{% endblock %}
{% block body %}
	<form method="post" class="formLogin">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="row">

			<div class="col-6">
				<div class="login-container">
					<img class="logo" src="{{ asset('build/images/logo-imprinova.svg')}}">

					<div class="form-outline form-white mb-4">
						<label for="inputEmail">Email</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					</div>

					<div class="form-outline form-white mb-4">
						<label for="inputPassword">Mot de passe</label>
						<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					</div>

					<div class="d-flex justify-content-between">
						<a class="text-black-50" href="/reset-password">Mot de passe oubli√© ?</a>
						<a class="text-black-50" href="{{ path('app_register')}}">S'enregistrer ?</a>
					</div>

					<button class="btn bg-primary btn-outline-dark text-white btn-lg px-5 mt-5" type="submit">Connexion</button>
				</div>
			</div>
			<div class="col-6 background-login"></div>
		</div>
	</form>
{% endblock %}